{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "node",
    "jest"
  ],
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/jsx-uses-vars": 2,
    "react/prop-types": 0,
    "import/prefer-default-export": 0,
    "no-console": 0,
    "quotes": ["error", "single"]
  }
}
